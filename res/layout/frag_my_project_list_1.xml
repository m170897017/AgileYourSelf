<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_my_project_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is last text view!!!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_my_project_list_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tv1" />

        <TextView
            android:id="@+id/tv_my_project_list_priority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="tv2" />

        <TextView
            android:id="@+id/tv_my_project_list_assign_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="tv3" />
    </LinearLayout>

</LinearLayout>