<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_add_new_plan_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_add_new_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:contentDescription="imageForAddNewPlanTitle"
                android:src="@drawable/ic_action_add_to_queue" />

            <TextView
                android:id="@+id/tv_add_new_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:text="Add a new plan"
                android:textSize="@dimen/add_new_plan_title_font_size"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_name_of_new_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Name:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <EditText
                android:id="@+id/et_add_new_plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:hint="Name of new plan"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_start_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Start:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <Button
                android:id="@+id/btn_add_new_plan_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_end_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="End:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <Button
                android:id="@+id/btn_add_new_plan_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Points:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <EditText
                android:id="@+id/et_add_new_plan_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:hint="100"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_priority_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Priority:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <Button
                android:id="@+id/btn_add_new_plan_priority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:text="First"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_status_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Status:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <Button
                android:id="@+id/btn_add_new_plan_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:text="On-going"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_assign_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_assign_to_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Assign to:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <EditText
                android:id="@+id/et_add_new_plan_assign_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:hint="eccglln"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_description_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Description:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <EditText
                android:id="@+id/et_add_new_plan_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:maxLength="84"
                android:hint="This is description!!!!"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_notes_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Notes:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <EditText
                android:id="@+id/et_add_new_plan_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:hint="This is note!!!"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_new_plan_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_new_plan_alarm_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_title_weight"
                android:text="Alarm:"
                android:textSize="@dimen/add_new_plan_font_size" />

            <Button
                android:id="@+id/btn_add_new_plan_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@string/add_new_plan_content_weight"
                android:textSize="@dimen/add_new_plan_font_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>